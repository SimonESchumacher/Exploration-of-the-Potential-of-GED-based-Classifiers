{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "LD_LIBRARY_PATH": "/usr/local/lib:/usr/lib/x86_64-linux-gnu",
                "PYTHONPATH": "${workspaceFolder}"
            }
        }
    ]
}